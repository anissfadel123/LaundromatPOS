        <Border Grid.Column="1"
                Margin="17 24 24 24" 
                Background="#F2F2F2"
                BorderBrush="#707070"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="255*" />
                    <ColumnDefinition  Width="879*" />
                </Grid.ColumnDefinitions>

                <Grid.Resources>
                    <local:LineConverter x:Key="LineWidthToHeight" Decrease="9" />
                </Grid.Resources>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <StackPanel.Resources>
                        
                    </StackPanel.Resources>


                    <TextBlock Text="Category"
                               HorizontalAlignment="Center"
                               FontSize="30"
                               FontWeight="Regular"
                               Margin="0 1 0 14"
                               Foreground="#707070"/>
                    <ListBox Background="Transparent"
                             BorderThickness="0">
                        <ListBoxItem Style="{StaticResource CategoryListBoxItemStyle}" Content="Category" />
                        <ListBoxItem Style="{StaticResource CategoryListBoxItemStyle}" Content="Wash, Dry, and Fold"/>
                        <ListBoxItem Style="{StaticResource CategoryListBoxItemStyle}" Content="Bedding"/>
                        <ListBoxItem Style="{StaticResource CategoryListBoxItemStyle}" Content="Dry Cleaning"/>
                    </ListBox>
                </StackPanel>
                <Line HorizontalAlignment="Right" 
                      Grid.Column="0" 
                      SnapsToDevicePixels="True"
                      Stroke="#707070"
                      StrokeThickness="1"
                      
                      X1="255" 
                      Y1="9"
                      X2="255" 
                      Y2="{Binding Path=ActualHeight, Converter={StaticResource LineWidthToHeight}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Grid}}}"/>

                <Grid Margin="8"
                      Grid.Column="1">
                    <TextBox HorizontalAlignment="Stretch" 
                             VerticalAlignment="Top" Height="37" 
                             VerticalContentAlignment="Center"
                             BorderBrush="#707070"
                             BorderThickness="1">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="6" />
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>
            </Grid>
             
            
        </Border>
    </Grid>
</UserControl>
