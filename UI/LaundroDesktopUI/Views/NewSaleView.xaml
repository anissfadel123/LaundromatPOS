                                   Margin="68 6 0 0"/>


                        <Border Style="{StaticResource dropbox_shadow}" Grid.Row="0" Grid.Column="0" Panel.ZIndex="0"/>
                        <Border Style="{StaticResource shadow_card_border}" Grid.Row="0" Grid.Column="0" Panel.ZIndex="1">
                            <TextBlock Style="{StaticResource card_text}" Text="Aniss Fadel"/>
                        </Border>
                        <Border Style="{StaticResource dropbox_shadow}" Grid.Row="1" Grid.Column="0" Panel.ZIndex="0"/>
                        <Border Style="{StaticResource shadow_card_border}" Grid.Row="1" Grid.Column="0" Panel.ZIndex="1">
                            <TextBlock Style="{StaticResource card_text}" Text="1 (718) 123 - 4567"/>
                        </Border>
                        <Border Style="{StaticResource dropbox_shadow}" Grid.Row="0" Grid.Column="1" Margin="0 0 27 0" Panel.ZIndex="0"/>
                        <Border Style="{StaticResource shadow_card_border}" Grid.Row="0" Grid.Column="1" Margin="0 0 27 0" Panel.ZIndex="1">
                            <TextBlock Style="{StaticResource card_text}" Text="12"/>
                        </Border>
                        <Border Style="{StaticResource dropbox_shadow}" Grid.Row="1" Grid.Column="1" Margin="0 0 27 0" Panel.ZIndex="0"/>
                        <Border Style="{StaticResource shadow_card_border}" Grid.Row="1" Grid.Column="1" Margin="0 0 27 0" Panel.ZIndex="1">
                            <TextBlock Style="{StaticResource card_text}" Text="122"/>
                        </Border>
                    </Grid>
                </Border>
                <Border Grid.Row="2" 
                        BorderBrush="#707070"
                        BorderThickness="1"
                        Margin="0 12 0 0"
                        >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition />
                            <RowDefinition Height="Auto"/>
                            
                        </Grid.RowDefinitions>
                        <!--// Table for customer inventory //-->

                        <Border BorderBrush="#707070"
                                BorderThickness="0 0 0 1"
                                Height="36"
                                VerticalAlignment="Top"
                                Background="White"
                                Padding="7 0 0 0"
                                Grid.Row="0">

                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        >
                                <StackPanel.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="{StaticResource Poppins}"/>
                                        <Setter Property="FontSize" Value="16"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#707070"/>
                                    </Style>
                                </StackPanel.Resources>

                                <TextBlock Text="Qty" Margin="0 0 56 0"/>
                                <TextBlock Text="Item Info" Margin="0 0 136.9 0"/>
                                <TextBlock Text="Discount %" Margin="0 0 67.6 0"/>
                                <TextBlock Text="Unit" Margin="0 0 57.6 0"/>
                                <TextBlock Text="Amount"/>

                            </StackPanel>

                        </Border>

                        <Border Height="133"
                                VerticalAlignment="Bottom"
                                Background="White"
                                BorderThickness="0 1 0 0"
                                BorderBrush="#707070"
                                Grid.Row="2"
                                Padding="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" 
                                           Grid.Column="0" 
                                           Text="Sub Total" 
                                           FontSize="20"
                                           FontFamily="Regular"
                                           Foreground="#707070" />
                                <TextBlock Grid.Row="0" 
                                           Grid.Column="1" 
                                           Text="$22.98" 
                                           HorizontalAlignment="Right"
                                           FontSize="20"
                                           FontFamily="Regular"
                                           Foreground="#707070"/>
                                
                                <TextBlock Grid.Row="1" 
                                           Grid.Column="0" 
                                           Text="Tax"
                                           FontSize="20"
                                           FontFamily="Regular"
                                           Foreground="#707070"/>
                                
                                <TextBlock Grid.Row="1"
                                           Grid.Column="1" 
                                           Text="$0.00" 
                                           HorizontalAlignment="Right"
                                           FontSize="20"
                                           FontFamily="Regular"
                                           Foreground="#707070"/>
                                
                                <Separator Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>

                                <TextBlock Grid.Row="2" 
                                           Grid.Column="0" 
                                           Text="Grand Total"
                                           FontSize="24"
                                           FontFamily="Regular"
                                           Foreground="#707070" />
                                
                                <TextBlock Grid.Row="2" 
                                           Grid.Column="1" 
                                           Text="$22.98" 
                                           HorizontalAlignment="Right"
                                           FontSize="24"
                                           FontFamily="Regular"
                                           Foreground="#707070"/>



                            </Grid>
                        </Border>
                    </Grid>
                </Border>
                <TextBox Grid.Row="3"
                         BorderBrush="#707070" 
                         BorderThickness="1" 
                         Margin="0 12 0 0"
                         Height="114"/>

                <Grid Grid.Row="4" Height="64"
                           Margin="0 22.6 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.Resources>
                        <Style TargetType="Button">
                            <!--<Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="12" Opacity="0.51" Direction="-90" ShadowDepth="3"/>
                                </Setter.Value>
                            </Setter>-->
                        </Style>
                    </Grid.Resources>

                    <Button x:Name="cancelBtn" 
                            Background="#FF0000" 
                            HorizontalAlignment="Stretch"
                            Margin="0 0 18 0"
                            Foreground="White" 
                            Content="Cancel"
                            FontSize="29"
                            FontWeight="Medium"/>
                    <Button x:Name="voidBtn" 
                            Background="#707070" 
                            HorizontalAlignment="Stretch"
                            Margin="9 0 9 0"
                            Grid.Column="1" 
                            Foreground="White" 
                            Content="Void"
                            FontSize="29"
                            FontWeight="Medium"/>
                    <Button  Background="#264CE2" 
                             HorizontalAlignment="Stretch" 
                             Margin="18 0 0 0"
                             Grid.Column="2" 
                             Foreground="White" 
                             Content="Continue"
                             FontSize="29"
                             FontWeight="Medium" />



                </Grid>
            </Grid>
