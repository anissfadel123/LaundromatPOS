                            <TextBlock Style="{StaticResource card_text}" Text="{Binding CustomerVM.CustomerName}"/>
                        </Border>
                        <Border Style="{StaticResource dropbox_shadow}" Grid.Row="1" Grid.Column="0" Panel.ZIndex="0"/>
